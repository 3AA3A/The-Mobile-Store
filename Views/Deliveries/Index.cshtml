@model IEnumerable<MobilesProject.Models.Delivery>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (User.Identity.Name.Equals("admin@admin.com"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cart.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cart.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shipping.ShippingCarrier)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cart.CustomerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cart.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Shipping.ShippingCarrier)
    </td>
    @{
        if (User.Identity.Name.Equals("admin@admin.com"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        }
    }
</tr>
    }

</table>
