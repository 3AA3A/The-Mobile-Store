@model IEnumerable<MobilesProject.Models.Wishlist>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="well">
        <h2>Wishlist</h2>
        <h5 class="text-danger">@TempData["error"]</h5>
        <h5 class="text-success">@TempData["confirm"]</h5>
    </div>

    <table class="table">
        <tr>
            @{
                if (User.Identity.Name == "admin@admin.com")
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Customer.Name)
                    </th>
                }
            }
            <th>
                Product
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @{
                    if (User.Identity.Name == "admin@admin.com")
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Name)
                        </td>
                    }
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @{string imgloc = @Html.DisplayFor(modelItem => item.Product.Image) + ".jpg";}
                    <img src="~/Content/Image/@Html.DisplayFor(modelItem => item.Product.Image)" width="100" height="150" />
                </td>
                <td>
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Remove From Wishlist", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>




